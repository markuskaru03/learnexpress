{% extends 'partials/layout.njk' %}
{% block title%}About{% endblock %}
{% block content %}
    <h1>New Felis Catus</h1>
    <form action="/cats" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input name="name" type="text" class="form-control" id="name" placeholder="Write cat name">
        </div>
        <div class="mb-3">
            <label for="birthyear" class="form-label">Birth year</label>
            <input name="birthyear" type="number" class="form-control" id="birthyear" placeholder="Write cats birth year">
        </div>
        <div class="mb-3">
                <label for="gender" class="form-label">Gender</label>
                <select name="gender" id="gender" class="form-select">
                    <option disabled selected>Select gender</option>
                    <option>Male</option>
                    <option>Female</option>
                    </select>
                    </div>
        <div class="mb-3">
            <label for="color" class="form-label">Color</label>
            <input name="color" type="text" class="form-control" id="color" placeholder="Write color">
        </div>
        <div class="mb-3">
            <label for="eyes" class="form-label">Eye Color</label>
            <input name="eyes" type="text" class="form-control" id="eyes" placeholder="Write eye color">
        </div>
        <div class="mb-3">
            <label for="spayed" class="form-label">Spayed</label>
            <input name="spayed" type="checkbox" class="form-check" id="eyes">
        </div>
        <button class="btn btn-primary">Add cat</button>
    </form>
{% endblock %}